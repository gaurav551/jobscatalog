
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/adminlte/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">JOBSCATALOG </span>
    </a>
    <div class="sidebar">
@if (User.Identity.IsAuthenticated)
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">Hi, @User.Identity.Name.Split('@')[0] </a>
        </div>
    </div>
}
else
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="info">
            <a href="#" class="d-block swalDefaultInfo">Hi, Visitor</a>
        </div>
    </div>
}
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Admin" asp-action="Index" class="nav-link @Url.MakeActiveClass("admin","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Job" asp-area="Admin" asp-action="Index" class="nav-link @Url.MakeActiveClass("job","index")">
                        <i class="nav-icon fas fa-briefcase"></i>
                        <p>
                            JOBS
                        </p>
                    </a>
                </li>
               
              
                    <li class="nav-item ">
                        <a asp-controller="Job" asp-action="Manage" class="nav-link @Url.MakeActiveClass("job","manage")">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                Manage
                            </p>
                        </a>
                    </li>
                
            </ul>
        </nav>
    </div>
</aside>