@model Company


<input type="hidden" id="compId" name="compId" value="@Model.Id">
<div class="page-content">
    <div class="overlay-black-dark profile-edit p-t50 p-b20" style="background-image:url(/companies/@Model.Logo);">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-7 candidate-info">
                    <div class="candidate-detail">
                        <div class="canditate-des text-center">
                            <a href="javascript:void(0);">
                                <img alt="" src="/companies/@Model.Logo">
                            </a>

                        </div>
                        <div class="text-white browse-job text-left">
                            <h4 class="m-b0">@Model.CompanyName

                            </h4>
                            <p class="m-b15">Company Type : @Model.Category </p>
                            <ul class="clearfix">
                                <li><i class="ti-location-pin"></i> @Model.Address</li>
                                <li><i class="ti-mobile"></i> @Model.Phone</li>
                                <li><i class="ti-briefcase"></i> @Model.City</li>
                                <li><i class="ti-email"></i> @Model.Email</li>
                            </ul>
                            <div class="progress-box m-t10">
                                <div class="progress-info">@Model.Description</div>

                            </div>
							
							<p>Give a like</p>
                           <a href="#" class="like-button">
