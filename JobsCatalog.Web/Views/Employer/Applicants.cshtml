@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : ""; 
}
<div class="page-content bg-white">
        <!-- contact area -->
        <div class="content-block">
			<!-- Browse Jobs -->
			<div class="section-full bg-white p-t50 p-b20">
				<div class="container">
					<div class="row">
						<div class="col-xl-3 col-lg-4 m-b30">
							<div class="sticky-top">
								<div class="candidate-info company-info">
									<partial name="_EmployerSidebar"/>
								</div>
							</div>
						</div>
						<div class="col-xl-9 col-lg-8 m-b30">
							<div class="job-bx clearfix">
								<div class="job-bx-title clearfix">
									<h5 class="font-weight-700 pull-left text-uppercase">Job Applicants</h5>
									<a href="company-manage-job.html" class="site-button right-arrow button-sm float-right">Back</a>
								</div>
								<ul class="post-job-bx browse-job-grid post-resume row">
									@foreach (var c in Model)
									{
										
									
									<li class="col-lg-6 col-md-6">
										<div class="post-bx">
											<div class="d-flex m-b20">
												<div class="job-post-info">
													<h5 class="m-b0"><a href="jobs-profile.html">@c.ApplicantsName</a></h5>
													<p class="m-b5 font-13">
														<a href="javascript:void(0);" class="text-primary">@c.ApplicantsTitle </a>
														</p>
													<ul>
														<li><i class="fa fa-map-marker"></i>@c.ApplicantsCity</li>
														<li><i class="fa fa-money"></i> @c.MinSalaryAndMaxSalary</li>
													</ul>
												</div>
											</div>
											<div class="job-time m-t15 m-b10">
												@foreach (var item in c.JobTag.Split(','))
												{
												<a href="javascript:void(0);"><span>@item</span></a>
													
												}
											
												
											</div>
											<a href="files/pdf-sample.pdf" target="blank" class="job-links">
												<i class="fa fa-download"></i>
											</a>
										</div>
									</li>
									}
									
								</ul>
								<div class="pagination-bx float-right m-t30">
								<ul class="pagination">
									<li class="previous">
										<a asp-action="Applicants"
           asp-route-page="@(Model.PageIndex - 1)"
           class="btn btn-default @prevDisabled btn"><i class="ti-arrow-left"></i>
											Prev</a></li>
									
									<li class="next">
										<a asp-action="Applicants"
           asp-route-page="@(Model.PageIndex + 1)"
           class="btn btn-default @nextDisabled btn" >Next <i
												class="ti-arrow-right"></i></a></li>
								</ul>
							</div>
							</div>
						</div>
					</div>
				</div>
			</div>
            <!-- Browse Jobs END -->
		</div>
    </div>
    <!-- Content END-->
	<!-- Modal Box -->
	
	<!-- Modal Box End -->