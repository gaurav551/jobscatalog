@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if(UserManager.GetUserAsync(User).Result.IsEmployer)
    {
      <a asp-controller="Employer" asp-action="Index">Employer Zone<i class="fa fa-briefcase"></i></a>

    }
    else
    {
     <a asp-controller="Employee" asp-action="Index">Employe Zone<i class="fa fa-user"></i></a>
    }

}