 @{
 Layout = null;
 }


 <div id="job-searchitems">
	 <div class="job-bx-title clearfix">
								<h5 class="font-weight-700 pull-left text-uppercase">Showing @Model.Count </h5>
								<div class="float-right">
									<span class="select-title">Sort by freshness</span>
									<select class="bs-select-hidden">
										<option>Last 2 Months</option>
										<option>Last Months</option>
										<option>Last Weeks</option>
										<option>Last 3 Days</option>
									</select>
									
									<div class="float-right p-tb5 p-r10">
										<a href="#" class="p-lr5"><i class="fa fa-th-list"></i></a>
										<a href="#" class="p-lr5"><i class="fa fa-th"></i></a>
									</div>
								</div>
							</div>
 	<ul class="post-job-bx browse-job-grid row">
 		@foreach(var x in Model)
 		{
 		<li class="col-lg-6 col-md-12">
 			<div class="post-bx">
 				<div class="d-flex m-b30">
 					<div class="job-post-info">
 						<h5><a asp-action="JobDetails" asp-route-id="@x.Id" asp-route-title="@x.Title.Replace(" ","-")"> @(x.Title.Length>26? x.Title.Substring(0,25)+ "..." : x.Title )</a></h5>
 						<ul>
 							<li><i class="fa fa-map-marker"></i> @x.Location</li>
 							<li><i class="fa fa-bookmark-o"></i> @x.Category</li>
 							<li><i class="fa fa-clock-o"></i> @x.PostedOn</li>
 						</ul>
 					</div>
 				</div>
 				<div class="dez-post-tags clear">
 					<div class="post-tags">
 					@foreach (var item in x.Tags.Split(','))
						{
						<a href="javascript:void(0);">@item </a>

						}

 					</div>
 				</div>
 				<br>
 				<div class="d-flex">
 					<div class="job-time mr-auto">
 						<a href="javascript:void(0);"><span>@x.Type</span></a>
 					</div>
 					<div class="salary-bx">
 						<span>@x.MinSalary.ToString("N0") - @x.MaxSalary.ToString("N0")</span>
 					</div>
 				</div>
 				<label class="like-btn">
 					<input type="checkbox">
 					<span class="checkmark"></span>
 				</label>
 			</div>
 		</li>
 		}
 	</ul>
	
 </div>