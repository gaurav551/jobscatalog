
@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : ""; 
}
    <div class="page-content bg-white">
        <!-- inner page banner -->

        <!-- inner page banner END -->
        <!-- contact area -->
        <div class="content-block">
            <!-- Job Detail -->
            <div class="section-full content-inner-1">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="sticky-top">
                                <div class="row">
                                    <div class="col-lg-12 col-md-6">
                                        <ul class="post-job-bx browse-job">
                                            <li>
                                                <div class="post-bx">
                                                    <div class="d-flex m-b30">
                                                        <div class="job-post-info">
                                                            <h5> <i class="ti-tags"></i>Similar Tags</h5>
                                                            <ul>
                                                                <li>


                                                                    <div class="dez-post-tags clear">
                                                                        <div class="post-tags">
                                                                            @foreach (var item in ViewBag.SimilarTags)
                                                            {
                                                             <a asp-action="Tags" asp-route-tag="@item">@item</a>            
                                                    
                                                            }
                                                                        </div>
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg-12 col-md-6">
                                        <div class="widget bg-white p-lr20 p-t20  widget_getintuch radius-sm">
                                            <h5 class="text-black font-weight-700 p-t10 m-b15">Popular Tags </h5>
                                            <ul>
                                                <li>
                                                    <div class="dez-post-tags clear">
                                                        <div class="post-tags">
                                                            @foreach (var item in ViewBag.PopularTags)
                                                            {
                                                             <a asp-action="Tags" asp-route-tag="@item">@item</a>            
                                                    
                                                            }

                                                        </div>
                                                    </div>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <ul class="post-job-bx browse-job-grid row">

									@foreach(var x in Model)
									{
									<li class="col-lg-6 col-md-12">
										<div class="post-bx">
											<div class="d-flex m-b30">
												<div class="job-post-info">
													<h5><a asp-action="JobDetails" asp-route-id="@x.Id"
															asp-route-title="@x.Title.Replace(" "," -")"> @(x.Title.Length>26? x.Title.Substring(0,25)+ "..." : x.Title )</a>
													</h5>
													<ul>
														<li><i class="fa fa-map-marker"></i> @x.Location</li>
														<li><i class="fa fa-bookmark-o"></i> @x.Category</li>
														<li><i class="fa fa-clock-o"></i> @x.PostedOn</li>
													</ul>
												</div>
											</div>
											 <div class="dez-post-tags clear">
											<div class="post-tags">
												@foreach (var item in x.Tag.Split(','))
												{
												<a href="javascript:void(0);">@item </a>

												}

											</div>
											 </div>
											 <br>
											<div class="d-flex">
												<div class="job-time mr-auto">
													<a href="javascript:void(0);"><span>@x.Type</span></a>
												</div>
												<div class="salary-bx">
													<span>@x.MinSalary.ToString("N0") - @x.MaxSalary.ToString("N0")</span>
												</div>
											</div>
											@* <label class="like-btn">
												<input type="checkbox">
												<span class="checkmark"></span>
											</label> *@
										</div>
									</li>
									}

								</ul>
						
							<div class="pagination-bx float-right m-t30">
								<ul class="pagination">
									<li class="previous">
										<a asp-action="Tags" asp-route-tag="@ViewBag.Tag"
           asp-route-page="@(Model.PageIndex - 1)"
           class="btn btn-default @prevDisabled btn"><i class="ti-arrow-left"></i>
											Prev</a></li>
									
									<li class="next">
										<a asp-action="Tags" asp-route-tag="@ViewBag.Tag"
           asp-route-page="@(Model.PageIndex + 1)"
           class="btn btn-default @nextDisabled btn" >Next <i
												class="ti-arrow-right"></i></a></li>
								</ul>
							</div>
								</div>
                                </div>
					

                        </div>
                    </div>
                    <!-- Job Detail -->
                    <!-- Our Jobs -->

                    <!-- Content END-->


                </div>
            </div>
        </div>
    </div>

    <!-- Modal Box -->

    <script src="/assets/js/jquery.min.js"></script><!-- JQUERY.MIN JS -->

    <!-- Modal Box End -->
    <script src="/js/browsejob.js"></script><!-- JQUERY.MIN JS -->